#value=
#checked=false
#width=0
#height=0
#manage=false
#right=false
#bgcolor=GetVar('HtmlInputBgColour')
#fgcolor=GetVar(HtmlFontColour)
#disabled=false

<font size="$GetVar('HtmlFontSizeControls')">
<input
  type="checkbox"
  height="#height"
  fgcolor="#fgcolor"
  bgcolor="#bgcolor"
  name="#name"
  width="#width"
  value="#value"
  checked="#checked"
  onclick="#onclick"
  oncheck="html.SetData(~name~,'True')"
  onuncheck="html.SetData(~name~,' ')"
  right="#right"
  manage="#manage"
  disabled="#disabled"
>
</font>